<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                   http://www.springframework.org/schema/context
                   http://www.springframework.org/schema/context/spring-context-3.0.xsd
                   http://www.springframework.org/schema/context
                   http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    
    
    <bean id="varastoIo" class="ohtu.verkkokauppa.Varasto">
        <constructor-arg ref="kirjanpitoIo" />
    </bean>
    <bean id="kirjanpitoIo" class="ohtu.verkkokauppa.Kirjanpito"></bean>
    <bean id="pankkiIo" class="ohtu.verkkokauppa.Pankki">
        <constructor-arg ref="kirjanpitoIo" />
    </bean>
    <bean id="viitegeneraattoriIo" class="ohtu.verkkokauppa.Viitegeneraattori"></bean>
    
    
    <bean id="kauppaIo" class="ohtu.verkkokauppa.Kauppa">
      <constructor-arg ref="varastoIo" />
      <constructor-arg ref="pankkiIo" />
      
      
      <constructor-arg ref="viitegeneraattoriIo" />  
    </bean>
    
    
    <context:annotation-config />
    <context:component-scan base-package="ohtu.verkkokauppa" />

</beans>